    {
      "name": "02 Orders (create is async)",
      "item": [
        {
          "name": "Create order (amount=1500) — sets {{orderId}}",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "{{userId}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders/orders"
            },
            "description": "Создать заказ. Асинхронно запускает оплату (через RabbitMQ).",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1500\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "if (json && json.orderId) {",
                  "  pm.collectionVariables.set(\"orderId\", json.orderId);",
                  "  pm.collectionVariables.set(\"lastOrderId\", json.orderId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get order by id ({{orderId}})",
